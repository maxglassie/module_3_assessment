
<h1> <%= @stores_hash["total"] %> Total Stores within 25 Miles </h1>
<table>
  <caption>Ten Closest Stores</caption>
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Distance</th>
      <th>Phone</th>
      <th>Type</th>
    </tr>
  </thead>
  <tbody>
  <% @stores.each do |store| %>
    <tr>
      <td><%= store.name %></td>
      <td><%= store.city %></td>
      <td><%= store.distance %></td>
      <td><%= store.phone %></td>
      <td><%= store.type %></td>
    </tr>
    <% end %>
  </tbody>
</table>
